{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_users_index' %}

{% block main %}
    <h1>{{ 'title.users_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
        <tr>
            <th scope="col">{{ 'label.fullname'|trans }}</th>
            <th scope="col">{{ 'label.username'|trans }}</th>
            <th scope="col">{{ 'label.email'|trans }}</th>
            <th scope="col">{{ 'label.role'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.fullName }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join }}</td>

                <td class="text-right">
                    <div class="item-actions">
{#                        <a href="{{ path('admin_post_show', {id: post.id}) }}" class="btn btn-sm btn-secondary">#}
{#                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}#}
{#                        </a>#}

{#                        <a href="{{ path('admin_post_edit', {id: post.id}) }}" class="btn btn-sm btn-primary">#}
{#                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}#}
{#                        </a>#}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'post.no_posts_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_users_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'label.create_user'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
